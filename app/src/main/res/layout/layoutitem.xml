<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:paddingLeft="5dip" android:paddingRight="6dip" android:paddingTop="6dip" android:paddingBottom="6dip" android:layout_height="wrap_content" android:orientation="vertical">
	    <TextView android:layout_width="wrap_content" android:id="@+id/title" android:layout_height="wrap_content" 
	        android:textIsSelectable="false"
            android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
	    <TextView android:id="@+id/description"
	        android:textIsSelectable="false"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:maxLines="4"></TextView>
</LinearLayout>
